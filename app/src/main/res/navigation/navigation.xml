<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loadingFragment2">

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.demo.testweatherapp.fragments.TodayFragment"
        android:label="TodayFragment">
        <action
            android:id="@+id/action_todayFragment_to_forecastFragment"
            app:destination="@id/forecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/forecastFragment"
        android:name="com.demo.testweatherapp.fragments.ForecastFragment"
        android:label="ForecastFragment">
        <action
            android:id="@+id/action_forecastFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadingFragment2"
        android:name="com.demo.testweatherapp.fragments.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment2_to_todayFragment"
            app:destination="@id/todayFragment" />
    </fragment>
</navigation>